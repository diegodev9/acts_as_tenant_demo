<h1>Accounts</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Subdomain</th>
      <th>Domain</th>
      <!--<th colspan="3"></th>-->
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.subdomain %></td>
        <td><%= account.domain %></td>
        <!--<td><%#= link_to 'Show', account, class: 'btn btn-sm btn-primary' %></td>
        <td><%#= link_to 'Edit', edit_account_path(account), class: 'btn btn-sm btn-primary' %></td>
        <td><%#= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path, class: 'btn btn-success' %>
